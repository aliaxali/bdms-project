<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users - Blood Donation Management System</title>
    <link rel="stylesheet" href="/css/manageusersstyles.css">
</head>
<body>
    <div class="manage-users-container">
        <header>
            <h1>Manage Users</h1>
        </header>

        <!-- Search and Filter Section -->
        <div class="search-filter">
            <section class="search-section">
                <form id="searchForm">
                    <input type="text" id="search" placeholder="Search by name or email" required>
                    <button type="submit">Search</button>
                </form>
            </section>
        </div>

        <!-- Table to display users -->
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Active</th>
                    <th>City</th>
                    <th>District</th>
                    <th>State</th>
                    <th>Blood Group</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <!-- User rows will be dynamically inserted here -->
                <% donors.forEach(donor => { %>
                    <tr id="user-<%= donor._id %>">
                        <td><%= donor._id %></td>
                        <td><%= donor.name %></td>
                        <td><%= donor.email %></td>
                        <td><%= donor.availability %></td>
                        <td><%= donor.city %></td>
                        <td><%= donor.district %></td>
                        <td><%= donor.state %></td>
                        <td><%= donor.bloodGroup %></td>
                        <td>
                            
                            <button class="delete-btn" onclick="deleteUser('<%= donor._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="pagination">
            <button onclick="prevPage()">Previous</button>
            <span id="page-info">Page 1</span>
            <button onclick="nextPage()">Next</button>
        </div>

        <!-- Modal for Editing User Info -->
        <div id="editModal" class="modal">
            <div class="modal-content">
                <span class="close-btn" onclick="closeModal()">&times;</span>
                <h2>Edit User</h2>
                <form id="editUserForm">
                    <label for="editName">Name</label>
                    <input type="text" id="editName" required>
                    <label for="editEmail">Email</label>
                    <input type="email" id="editEmail" required>
                    <label for="editStatus">Status</label>
                    <select id="editStatus">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <label for="editCity">City</label>
                    <input type="text" id="editCity" required>
                    <label for="editDistrict">District</label>
                    <input type="text" id="editDistrict" required>
                    <label for="editState">State</label>
                    <input type="text" id="editState" required>
                    <label for="editBloodGroup">Blood Group</label>
                    <input type="text" id="editBloodGroup" required>
                    <button type="submit" onclick="updateUser()">Save Changes</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/manageusersscripts.js"></script>
</body>
</html>
